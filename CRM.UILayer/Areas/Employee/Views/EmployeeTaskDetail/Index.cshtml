@model List<EmployeeTaskDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    int count = 0;
}

<h3>Görev Detayları</h3>

@if (Model.Count == 0)//Eğer henüz herhangi bir detay girişi yapılmamışşa kullanıcıya bilgi dönmesi için
{
    <div class="card">
        <div class="card-body">
            Henüz bir detay girişi bulunmamaktadır!
        </div>
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
            
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => @item.Description)</td>
                </tr>
            }
        </tbody>
    </table>
}


