@model List<CRM.EntityLayer.Concrete.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
    int count = 0;
}

<h1>Personel Listesi</h1>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Görevler</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.Category.Name</td>
            <td><a href="/Employee/DeleteEmployee/@item.ID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Employee/UpdateEmployee/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-dark">Görevler</a></td>

            @{
                if (item.Status == true)
                {
                    <td><a href="/Employee/ChangeStatusToFalse/@item.ID" class="btn btn-outline-danger">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="/Employee/ChangeStatusToTrue/@item.ID" class="btn btn-outline-warning">Aktif Yap</a></td>
                }
            }

        </tr>
    }
</table>
<br />
<a href="/Employee/AddEmployee/" class="btn btn-primary">Yeni Personel Girişi</a>

