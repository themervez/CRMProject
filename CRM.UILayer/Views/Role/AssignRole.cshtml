@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Rol Atama İşlemleri</h1>
<br />
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exist" />
            <label class="form-check-label">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-success">Rolleri Düzenle</button>
</form>

